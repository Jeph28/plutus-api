{
    "name": "plutus-api",
    "version": "1.0.0",
    "scripts": {
        "start": "doppler run -- node app/dist/app.js",
        "dev": "pnpm build && pnpm watch",
        "build": "tsc",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"pnpm watch-ts\" \"pnpm watch-node\"",
        "watch-ts": "tsc -w",
        "watch-node": "doppler run -- nodemon --quiet dist/src/app.js",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^9.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-validator": "^7.0.0",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.0.0",
        "morgan": "^1.10.0",
        "pnpm": "^9.15.2",
        "winston": "^3.17.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/morgan": "^1.9.9",
        "@types/node": "^18.15.0",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "eslint": "^8.35.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.21",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.0"
    }
}
